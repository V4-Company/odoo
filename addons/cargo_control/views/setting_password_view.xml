<?xml version="1.0" encoding="UTF-8"?>
<odoo>


<template id="setting_password_template" name="Password Setup">
    <t t-call="website.layout">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 col-sm-8">
                    <div class="card shadow p-4">
                        <h2 class="text-center mb-4">Set Your New Password</h2>

                        <!-- Display error message if present -->
                        <t t-if="error_message">
                            <div class="alert alert-danger text-center" role="alert">
                                <t t-esc="error_message"/>
                            </div>
                        </t>

                        <!-- Password Reset Form -->
                        <form action="/my_custom_url_for_setting_password" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group mb-3">
                                <label for="password">New Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Enter new password" required = "true" minlength="8"/>
                            </div>

                            <div class="form-group mb-3">
                                <label for="confirm_password">Confirm Password</label>
                                <input type="password" class="form-control" id="confirm_password" 
                                       name="confirm_password" placeholder="Confirm new password" required = "true" minlength="8"/>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Set Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>
</odoo>