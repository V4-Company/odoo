<odoo>
    <template id="nf_emission_form_template" name="Formulário de Emissão de NF">
        <div class="container">
            <h1>Envio de Nota Fiscal</h1>
            <t t-if="error">
                <div class="alert alert-danger">
                    <t t-esc="error"/>
                </div>
            </t>
            <form action="/nf/emission/submit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" class="form-control" required="required"/>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required="required"/>
                </div>
                <div class="form-group">
                    <label for="valor_nf">Valor da Nota Fiscal</label>
                    <input type="number" id="valor_nf" name="valor_nf" class="form-control" required="required"/>
                </div>
                <div class="form-group">
                    <label for="mes_ref">Mês de Referência</label>
                    <input type="date" id="mes_ref" name="mes_ref" class="form-control" required="required"/>
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea id="descricao" name="descricao" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="nf_file">Anexar Nota Fiscal (PDF)</label>
                    <input type="file" id="nf_file" name="nf_file" class="form-control" required="required"/>
                </div>
                <button type="submit" class="btn btn-primary">Enviar Nota Fiscal</button>
            </form>
        </div>
    </template>

    <template id="nf_emission_success_template" name="Nota Fiscal Enviada com Sucesso">
        <div class="container">
            <h1>Nota Fiscal Enviada!</h1>
            <p>Sua nota fiscal foi enviada com sucesso.</p>
        </div>
    </template>


    <template id="list_nf_emissions_template" name="Lista de Notas Fiscais">
        <div class="container">
            <h2>Notas Fiscais</h2>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Usuário</th>
                        <th>Descrição</th>
                        <th>Valor da Nota Fiscal</th>
                        <th>Mês de Referência</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="records" t-as="record">
                        <tr>
                            <td><t t-esc="record.user_id.name"/></td>
                            <td><t t-esc="record.description"/></td>
                            <td><t t-esc="record.valor_nf"/></td>
                            <td><t t-esc="record.mes_ref"/></td>
                            <td><t t-esc="record.state"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </template>
</odoo>